<div class="row mt-n200">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">登入</h1>
      {{!-- 引用 message 這個 partial view --}}
      {{> messages}}
      <form action="/users/login" method="POST" class="needs-validation" novalidate>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="輸入Email" required>
          <div class="invalid-tooltip">
            此欄位為必填
          </div>
        </div>
        <div class="form-group">
          <label for="password">密碼</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="輸入密碼" required>
          <div class="invalid-tooltip">
            此欄位為必填
          </div>
        </div>
        <button type="submit" class="btn btn-secondary btn-block">登入</button>
        <a href="/auth/facebook" class="btn btn-info btn-block">Facebook 登入</a>
      </form>
      <p class="lead mt-4">
        尚未註冊? <a href="/users/register">註冊</a>
      </p>
    </div>
  </div>
</div>
